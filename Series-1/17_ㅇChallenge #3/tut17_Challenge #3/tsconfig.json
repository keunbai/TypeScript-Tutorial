{
  "compilerOptions": {
    /* Projects */
    "target": "es2016",                                 

    /* Modules */
    "module": "commonjs",                               
    "moduleResolution": "node",                       
    "baseUrl": "./",                                  
    "paths": {"*": ["node_modules/*"]},                 
    
    /* JavaScript Support */

    /* Emit */
    "sourceMap": true,                 
    "outDir": "dist",              
    "downlevelIteration": true,                       

    /* Interop Constraints */
    "esModuleInterop": true,                          

    /* Type Checking */
    "strict": true,                        
    // "noImplicitAny": true,                
    "noImplicitAny": false,                

    /* Completeness */
  },
  "include": ["src/**/*"]
}
